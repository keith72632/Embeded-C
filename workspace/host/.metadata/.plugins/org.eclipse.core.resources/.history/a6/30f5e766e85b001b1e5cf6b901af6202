#include <stdio.h>

int main() {
	int a;
	int b;


	printf("enter two integers\n");
	scanf("%d %d", &a, &b);
	printf("Bitwise &: %d\n", (a & b));
	printf("Bitwise |: %d\n", (a | b));
	printf("Bitwise ^: %d\n", (a ^ b));
	printf("Bitwise ~: %d\n", (~a));

	if((a & 1) == 0){
		printf("A is even");
	} else {
		printf("A is odd");
	}
	if((b & 1) == 0){
		printf("b is even");
	}else {
		printf("B is off");
	}

	return 0;
}

